      <section class="card register" ng-controller="AppController">
        <form name="form" ng-submit="clickSubmit()" novalidate>
          <div class="textintro">
            <h1>Registration Form</h1>
            <p>Please fill out the following form</p>
            <p>All fields with * are required.</p>
            <p ng-show="message">Hello??</p>

          </div>
          <fieldset>
            <input type="text" ng-model="user.companyname" name="companyname" placeholder="Company Name *" ng-required="true">
            <p ng-show="form.companyname.$invalid && form.companyname.$touched">You must fill out your company name</p>

            <input type="text" ng-model="user.companyslogan" name="companyslogan" placeholder="Company slogan">

            <input type="text" ng-model="user.street" name="street" placeholder="Street address *" ng-required="true">
            <p ng-show="form.street.$invalid && form.street.$touched">You must fill out your street address</p>

            <input type="text" ng-model="user.city" name="city" placeholder="City *" class="half" ng-required="true">
            <p ng-show="form.city.$invalid && form.city.$touched">You must fill out your City</p>

            <input type="text" ng-model="user.zip" name="zip" placeholder="Zip code *" class="half" ng-required="true">
            <p ng-show="form.zip.$invalid && form.zip.$touched">You must fill out your zip code</p>

            <input type="number" ng-model="user.phone" name="phone" placeholder="Phone number *" class="half" ng-minlength="10" ng-maxlength="10" ng-required="true">
            <p ng-show="form.phone.$invalid && form.phone.$touched">You must fill out your phone number</p>

            <input type="text" ng-model="user.fax" name="fax" placeholder="Fax number *" class="half" ng-required="true">
            <p ng-show="form.fax.$invalid && form.fax.$touched">You must fill out your fax number</p>

            <input type="email" ng-model="user.email" name="email" placeholder="Email *" ng-required="true">
            <p ng-show="form.email.$invalid && form.email.$touched">You must fill out your email</p>
          </fieldset>
          <button type="submit" class="btn">Submit</button>
        </form>
      </section>
  