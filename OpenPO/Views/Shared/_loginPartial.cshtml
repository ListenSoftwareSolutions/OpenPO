@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div ng-app="AppLoginModule" ng-controller="LoginController">
         

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                    <li>
                    
                        <a href="" ng-click="logout()" target="_self">Log Out</a>

                    </li>

                    
                </ul>
            </div>
                }
                }
                else
                {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Register", "Registration", "Login", null, null)</li>
            <li>@Html.ActionLink("Admin Login", "SecurityInfo", "Login", null, null)</li>
                </ul>
                }


