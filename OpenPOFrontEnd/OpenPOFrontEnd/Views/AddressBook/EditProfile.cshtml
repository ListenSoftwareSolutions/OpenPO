@{
    ViewBag.Title = "EditProfile";
}


    @ViewBag.AddressId

<div ng-app="AppAddressBookModule">
    <div ng-controller="AddressBookController" ng-init="getPerson(@ViewBag.AddressId);">
        <h3>Edit Person</h3>

        

        <form name="addAddressBook">
            <div>Name: <span name="name" ng-model="AddressBook.addressId" /></div>
            <div>Name: <input name="name" ng-model="AddressBook.name" /></div>
            <div>First Name: <input name="FirstName" ng-model="AddressBook.firstName" /></div>
            <div>Last Name:<input name="LastName" ng-model="AddressBook.lastName" /></div>
            <div>Company:<input name="Company" ng-model="AddressBook.company" /></div>
            <div>Cell Phone:<input name="CellPhone" ng-model="AddressBook.cellPhone" /></div>
            <div>Fax:<input name="Fax" ng-model="AddressBook.fax" /></div>
            <div>Shipping Address:<input name="BillingAddress" ng-model="AddressBook.shippingAddress" /></div>
            <div>Shipping City:<input name="BillingCity" ng-model="AddressBook.shippingCity" /></div>
            <div>Shipping State:<input name="BillingState" ng-model="AddressBook.shippingState" /></div>
            <div>Shipping Zipcode:<input name="BillingZipCode" ng-model="AddressBook.shippingZipCode" /></div>
            <div>Product Key:<input name="ProductKey" ng-model="AddressBook.productKey" /></div>

            <div>
                Type:
                <select ng-model="AddressBook.peopleXrefId" ng-options="i.id as i.label for i in UDCList track by i.id">
                  
                </select>
                <!--
                <option value="7" selected>Customer</option>
                <option value="8">Vendor</option>
                -->
            </div>

            <div><button ng-click="getPerson(@ViewBag.AddressId)">Get Person</button></div>
            <div><button ng-click="updatePerson(@ViewBag.AddressId)">Update</button></div>
            <div><button ng-click="deletePerson(@ViewBag.AddressId)">Delete</button></div>


            
            {{Message}}

        </form>
    </div>
</div>


